


 {{#if products}}
    <div class="table-responsive">
      <table class="table table-dark">
        <tr style="color: yellow;"> <th>Nombre</th> <th>descripcion</th> <th>codigo</th> <th>Thumbnail</th> <th>Precio</th> <th>stock</th>  </tr>
        {{#each products}}
          <tr>
            <td>{{title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.code}}</td>
            <td><img src="{{this.pic}}" alt="Imagen del producto"></td>
            {{!-- <td>{{this.pic}}</td> --}}
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
          </tr>
        {{/each}}
      </table>
    </div>


  <h3>Agregar productos</h3>

  <div class="container mt-3">
    <div class="jumbotron">
      <h3 style="color:blue;">Nuevo producto</h3>
      <br />
      <form action="/api/productos" method="POST">
        <div class="form-group">
          <label for="title"><b>Nombre</b></label>
          <input
            id="title"
            class="form-control"
            type="text"
            name="title"
            required
          />
        </div>

        <div class="form-group">
          <label for="price"><b>Precio</b></label>
          <input
            id="price"
            class="form-control"
            type="number"
            name="price"
            min="1"
            step="0.01"
            required
          />
        </div>

        <div class="form-group">
          <label for="description"><b>descripcion</b></label>
          <input
            id="description"
            class="form-control"
            type="text"
            name="description"
            required
          />
        </div>

        <div class="form-group">
          <label for="code"><b>codigo</b></label>
          <input
            id="code"
            class="form-control"
            type="text"
            name="code"
            required
          />
        </div>

        <div class="form-group">
          <label for="image"><b>thumbnail</b></label>
          <input
            id="image"
            class="form-control"
            type="url"
            name="image"
            required
          />
        </div>

        
        <div class="form-group">
          <label for="stock"><b>stock</b></label>
          <input
            id="stock"
            class="form-control"
            type="number"
            name="stock"
            required
          />
        </div>
        <button class="btn btn-success mt-3 mb-5" type="submit">Enviar</button>
      </form>
    </div>
  </div>


  {{/if}}
  {{#unless products}}
    <h3 class="alert alert-danger">{{err.message}}</h3>
  {{/unless}}


